<%- /* Este arquivo usa o layout principal definido no app.js */ %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="my-2">
                    <i class="fas fa-tools me-2"></i>
                    App Empreiteiros
                </h3>
            </div>
            <div class="card-body p-4">
                <h5 class="mb-4 text-center">Acesso ao Sistema</h5>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } %>

                <form id="loginForm" action="/auth/login" method="POST">
                    <!-- Campo oculto para o token CSRF -->
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">E-mail:</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" class="form-control" id="email" name="email" required placeholder="Digite seu e-mail">
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="senha" class="form-label">Senha:</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" class="form-control" id="senha" name="senha" required placeholder="Digite sua senha">
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Entrar
                        </button>
                    </div>
                </form>
                
                <hr>
                
                <div class="text-center">
                    <p class="mb-0">Precisa de uma conta?</p>
                    <a href="/auth/registro" class="btn btn-sm btn-outline-secondary">Registrar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script para garantir redirecionamento no login -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const loginForm = document.getElementById('loginForm');
    
    if (loginForm) {
        loginForm.addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Obter os dados do formulário
            const formData = new FormData(loginForm);
            
            // Enviar a requisição via fetch API
            fetch('/auth/login', {
                method: 'POST',
                body: formData,
                headers: {
                    // Não definir Content-Type, deixe o navegador configurar com boundary para FormData
                    'Accept': 'application/json, text/html'
                },
                credentials: 'same-origin'
            })
            .then(response => {
                // Verificar primeiro se a resposta é um redirecionamento
                if (response.redirected) {
                    window.location.href = response.url;
                    return;
                }
                
                // Tentar interpretar como JSON
                const contentType = response.headers.get('content-type');
                if (contentType && contentType.includes('application/json')) {
                    return response.json().then(data => {
                        if (data.success && data.redirect) {
                            window.location.href = data.redirect;
                        } else if (data.error) {
                            // Exibir mensagem de erro
                            alert('Erro: ' + data.error);
                        } else {
                            // Recarregar a página para exibir mensagens de erro do servidor
                            window.location.reload();
                        }
                    });
                } else {
                    // Se não for JSON, simplesmente recarregue a página para mostrar o HTML retornado
                    document.open();
                    response.text().then(html => {
                        document.write(html);
                        document.close();
                    });
                }
            })
            .catch(error => {
                console.error('Erro ao fazer login:', error);
                // Em caso de falha na requisição, submeter o formulário normalmente
                loginForm.submit();
            });
        });
    }
});
</script>