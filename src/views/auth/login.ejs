<%- include('../layouts/main', { hideNavbar: true, title: 'Login' }) %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="my-2">
                    <i class="fas fa-tools me-2"></i>
                    App Empreiteiros
                </h3>
            </div>
            <div class="card-body p-4">
                <h5 class="mb-4 text-center">Acesso ao Sistema</h5>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } %>

                <div id="errorAlert" class="alert alert-danger" style="display: none;">
                    <span id="errorMessage"></span>
                </div>

                <form id="loginForm" action="/auth/login" method="POST">
                    <!-- Campo oculto para o token CSRF -->
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">E-mail:</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" class="form-control" id="email" name="email" required placeholder="Digite seu e-mail">
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="senha" class="form-label">Senha:</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" class="form-control" id="senha" name="senha" required placeholder="Digite sua senha">
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Entrar
                        </button>
                    </div>
                </form>
                
                <hr>
                
                <div class="text-center">
                    <p class="mb-0">Precisa de uma conta?</p>
                    <a href="/auth/registro" class="btn btn-sm btn-outline-secondary">Registrar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script para garantir redirecionamento no login -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const loginForm = document.getElementById('loginForm');
    const errorAlert = document.getElementById('errorAlert');
    const errorMessage = document.getElementById('errorMessage');
    
    if (loginForm) {
        loginForm.addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Desabilitar botão de envio para evitar duplo envio
            const submitButton = loginForm.querySelector('button[type="submit"]');
            submitButton.disabled = true;
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Entrando...';
            
            // Obter os dados do formulário
            const formData = new FormData(loginForm);
            const formObject = {};
            formData.forEach((value, key) => {
                formObject[key] = value;
            });
            
            // Enviar a requisição via fetch API
            fetch('/auth/login', {
                method: 'POST',
                body: JSON.stringify(formObject),
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json, text/html',
                    'X-CSRF-Token': formObject._csrf
                },
                credentials: 'same-origin'
            })
            .then(response => {
                // Verificar primeiro se a resposta é um redirecionamento
                if (response.redirected) {
                    window.location.href = response.url;
                    return { redirected: true };
                }
                
                // Tentar interpretar como JSON
                const contentType = response.headers.get('content-type');
                if (contentType && contentType.includes('application/json')) {
                    return response.json();
                } else {
                    // Para HTML e outros formatos
                    return response.text().then(text => ({
                        html: true,
                        content: text,
                        status: response.status
                    }));
                }
            })
            .then(data => {
                // Se já foi redirecionado, não fazer nada
                if (data.redirected) return;
                
                if (data.html) {
                    // Se recebemos HTML, substituir o conteúdo da página
                    document.open();
                    document.write(data.content);
                    document.close();
                    return;
                }
                
                if (data.success && data.redirect) {
                    // Sucesso com redirecionamento explícito
                    window.location.href = data.redirect;
                } else if (data.message) {
                    // Restaurar botão
                    submitButton.disabled = false;
                    submitButton.innerHTML = '<i class="fas fa-sign-in-alt me-2"></i>Entrar';
                    
                    // Exibir mensagem de erro
                    errorMessage.textContent = data.message;
                    errorAlert.style.display = 'block';
                } else {
                    // Redirecionamento genérico para dashboard em caso de sucesso sem indicação específica
                    window.location.href = '/dashboard';
                }
            })
            .catch(error => {
                console.error('Erro ao fazer login:', error);
                
                // Restaurar botão
                submitButton.disabled = false;
                submitButton.innerHTML = '<i class="fas fa-sign-in-alt me-2"></i>Entrar';
                
                // Exibir erro genérico
                errorMessage.textContent = 'Erro ao fazer login. Tente novamente.';
                errorAlert.style.display = 'block';
            });
        });
    }
});
</script>