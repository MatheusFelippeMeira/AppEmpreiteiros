<%- contentFor('corpo') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="my-2">
                    <i class="fas fa-tools me-2"></i>
                    App Empreiteiros
                </h3>
            </div>
            <div class="card-body p-4">
                <h5 class="mb-4 text-center">Acesso ao Sistema</h5>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } %>

                <div id="errorAlert" class="alert alert-danger" style="display: none;">
                    <span id="errorMessage"></span>
                </div>

                <form id="loginForm" action="/auth/login" method="POST">
                    <% if (typeof csrfToken !== 'undefined') { %>
                    <!-- Campo oculto para o token CSRF -->
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <% } %>
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">E-mail:</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" class="form-control" id="email" name="email" required placeholder="Digite seu e-mail">
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="senha" class="form-label">Senha:</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" class="form-control" id="senha" name="senha" required placeholder="Digite sua senha">
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Entrar
                        </button>
                    </div>
                </form>
                
                <hr>
                
                <div class="text-center">
                    <p class="mb-0">Precisa de uma conta?</p>
                    <a href="/auth/registro" class="btn btn-sm btn-outline-secondary">Registrar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script para login simplificado -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const loginForm = document.getElementById('loginForm');
    
    if (loginForm) {
        loginForm.addEventListener('submit', function(event) {
            // Permitir envio normal do formulário sem validações complexas
            // para simplificar o processo de login
        });
    }
});
</script>