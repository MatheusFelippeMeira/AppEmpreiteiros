<!-- Formulário para criar novo orçamento -->
<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>Novo Orçamento</h4>
      </div>
      <div class="card-body">
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form action="/orcamentos" method="POST">
          <div class="mb-3">
            <label for="cliente_id" class="form-label">Cliente</label>
            <select class="form-select" id="cliente_id" name="cliente_id" required>
              <% if (clientes && clientes.length > 0) { %>
                <% clientes.forEach(function(cliente) { %>
                  <option value="<%= cliente.id %>" <%= orcamento.cliente_id == cliente.id ? 'selected' : '' %>><%= cliente.nome %></option>
                <% }); %>
              <% } else { %>
                <option value="">Nenhum cliente disponível</option>
              <% } %>
            </select>
          </div>
          <div class="mb-3">
            <label for="titulo" class="form-label">Título</label>
            <input type="text" class="form-control" id="titulo" name="titulo" value="<%= orcamento.titulo || '' %>" required>
          </div>
          <div class="mb-3">
            <label for="descricao" class="form-label">Descrição</label>
            <textarea class="form-control" id="descricao" name="descricao" rows="2" required><%= orcamento.descricao || '' %></textarea>
          </div>
          <div class="mb-3">
            <label for="valor_estimado" class="form-label">Valor Estimado</label>
            <input type="number" step="0.01" class="form-control" id="valor_estimado" name="valor_estimado" value="<%= orcamento.valor_estimado || '' %>" required>
          </div>
          <div class="mb-3">
            <label for="tipo_obra" class="form-label">Tipo de Obra</label>
            <input type="text" class="form-control" id="tipo_obra" name="tipo_obra" value="<%= orcamento.tipo_obra || '' %>">
          </div>
          <div class="mb-3">
            <label for="localidade" class="form-label">Localidade</label>
            <input type="text" class="form-control" id="localidade" name="localidade" value="<%= orcamento.localidade || '' %>">
          </div>







</div>  </div>    </div>      </div>        </form>          <a href="/orcamentos" class="btn btn-secondary ms-2">Cancelar</a>          <button type="submit" class="btn btn-primary">Salvar Orçamento</button>          </div>
          <button type="submit" class="btn btn-primary">Salvar Orçamento</button>
          <a href="/orcamentos" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
      </div>
    </div>
  </div>
</div>
