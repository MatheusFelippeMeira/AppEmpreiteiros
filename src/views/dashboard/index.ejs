<!-- Removido o contentFor('corpo') para compatibilidade com o layout -->

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    Dashboard
                </h4>
                <p class="card-text text-muted">
                    Bem-vindo ao Sistema de Gerenciamento para Empreiteiros. Aqui você encontra os principais indicadores do seu negócio.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Cards de indicadores -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Projetos em andamento</h6>
                        <h2 class="display-6 mb-0"><%= indicadores.projetos_andamento %></h2>
                    </div>
                    <i class="fas fa-building fa-2x"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Receita Total</h6>
                        <h2 class="display-6 mb-0">R$ <%= (indicadores.receita_total || 0).toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %></h2>
                    </div>
                    <i class="fas fa-money-bill-wave fa-2x"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Lucro Líquido</h6>
                        <h2 class="display-6 mb-0">R$ <%= (indicadores.lucro_liquido || 0).toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %></h2>
                    </div>
                    <i class="fas fa-chart-line fa-2x"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Funcionários</h6>
                        <h2 class="display-6 mb-0"><%= indicadores.total_funcionarios %></h2>
                    </div>
                    <i class="fas fa-hard-hat fa-2x"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Gráfico e Sugestões -->
<div class="row mb-4">
    <div class="col-md-8 mb-3">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">Visão Geral Financeira</h5>
            </div>
            <div class="card-body">
                <canvas id="financialChart" height="200"></canvas>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Sugestões Inteligentes</h5>
                <span class="badge rounded-pill bg-primary"><%= (sugestoes || []).length %></span>
            </div>
            <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                    <% if (typeof sugestoes !== 'undefined' && sugestoes.length > 0) { %>
                        <% sugestoes.forEach(function(sugestao) { %>
                            <li class="list-group-item">
                                <% if (sugestao.tipo === 'alerta') { %>
                                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                                <% } else if (sugestao.tipo === 'aviso') { %>
                                    <i class="fas fa-exclamation-circle text-warning me-2"></i>
                                <% } else { %>
                                    <i class="fas fa-info-circle text-info me-2"></i>
                                <% } %>
                                <strong><%= sugestao.titulo %>:</strong> <%= sugestao.mensagem %>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <li class="list-group-item text-center text-muted">
                            <i class="fas fa-robot me-2"></i>
                            Sem sugestões no momento
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Projetos em andamento -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Projetos em Andamento</h5>
                <a href="/projetos" class="btn btn-sm btn-outline-primary">Ver todos</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>Cliente</th>
                                <th>Início</th>
                                <th>Fim Previsto</th>
                                <th>Progresso</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof projetosAndamento !== 'undefined' && projetosAndamento.length > 0) { %>
                                <% projetosAndamento.slice(0, 5).forEach(function(projeto) { %>
                                    <tr>
                                        <td><%= projeto.nome %></td>
                                        <td><%= projeto.cliente_nome || 'N/A' %></td>
                                        <td><%= new Date(projeto.data_inicio).toLocaleDateString('pt-BR') %></td>
                                        <td><%= new Date(projeto.data_fim_prevista).toLocaleDateString('pt-BR') %></td>
                                        <td>
                                            <% 
                                                const hoje = new Date();
                                                const dataInicio = new Date(projeto.data_inicio);
                                                const dataFim = new Date(projeto.data_fim_prevista);
                                                const totalDias = (dataFim - dataInicio) / (1000 * 60 * 60 * 24);
                                                const diasPassados = (hoje - dataInicio) / (1000 * 60 * 60 * 24);
                                                let progresso = Math.min(Math.round((diasPassados / totalDias) * 100), 100);
                                                if (isNaN(progresso)) progresso = 0;
                                            %>
                                            <div class="progress">
                                                <div class="progress-bar <%= progresso > 90 ? 'bg-danger' : progresso > 70 ? 'bg-warning' : 'bg-success' %>" 
                                                    role="progressbar" style="width: <%= progresso %>%" 
                                                    aria-valuenow="<%= progresso %>" aria-valuemin="0" aria-valuemax="100">
                                                    <%= progresso %>%
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <a href="/projetos/<%= projeto.id %>" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/dashboard/analise/<%= projeto.id %>" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-chart-pie"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center py-3 text-muted">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Nenhum projeto em andamento
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gráfico financeiro
    const ctx = document.getElementById('financialChart').getContext('2d');
    const financialChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Receita', 'Gastos', 'Mão de obra', 'Lucro'],
            datasets: [{
                label: 'Valores (R$)',
                data: [
                    <%= indicadores.receita_total || 0 %>,
                    <%= indicadores.gastos_totais || 0 %>,
                    <%= indicadores.total_mao_obra || 0 %>,
                    <%= indicadores.lucro_liquido || 0 %>
                ],
                backgroundColor: [
                    'rgba(40, 167, 69, 0.7)',
                    'rgba(255, 193, 7, 0.7)',
                    'rgba(0, 123, 255, 0.7)',
                    'rgba(23, 162, 184, 0.7)'
                ],
                borderColor: [
                    'rgba(40, 167, 69, 1)',
                    'rgba(255, 193, 7, 1)',
                    'rgba(0, 123, 255, 1)',
                    'rgba(23, 162, 184, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) {
                            return 'R$ ' + value.toLocaleString('pt-BR');
                        }
                    }
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return 'R$ ' + context.raw.toLocaleString('pt-BR', { minimumFractionDigits: 2 });
                        }
                    }
                }
            }
        }
    });
});
</script>